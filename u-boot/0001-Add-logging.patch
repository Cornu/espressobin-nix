@@ -35,7 +35,6 @@ meminfo_t *bl1_plat_sec_mem_layout(void)
  */
 void marvell_bl1_early_platform_setup(void)
 {
-	const size_t bl1_size = BL1_RAM_LIMIT - BL1_RAM_BASE;
 
 #if PALLADIUM
 	/* Initialize SoC MPPs in case it's needed. */
@@ -52,6 +51,10 @@ void marvell_bl1_early_platform_setup(void)
 	bl1_ram_layout.total_size = MARVELL_BL_RAM_SIZE;
 
 	/* Calculate how much RAM BL1 is using and how much remains free */
+	const uintptr_t bl1_size = BL1_RAM_LIMIT - BL1_RAM_BASE;
+	VERBOSE("marvell_bl1_early_platform_setup(): BL1_RAM_BASE = 0x%zx, BL1_RAM_LIMIT = 0x%zx, bl1_size = 0x%zx\n",
+            BL1_RAM_BASE, BL1_RAM_LIMIT, bl1_size);
+
 	bl1_ram_layout.free_base = MARVELL_BL_RAM_BASE;
 	bl1_ram_layout.free_size = MARVELL_BL_RAM_SIZE;
 	reserve_mem(&bl1_ram_layout.free_base,
